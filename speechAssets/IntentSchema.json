 *
 * Project: ASKJaws
 * Plugin for the JAWS screen reader to ask for the keyboard shortcuts for all JAWs actions
 */

{
  "intents": [
    {
      "intent": "AMAZON.CancelIntent"
    },
    {
      "intent": "AMAZON.HelpIntent"
    },
    {
      "intent": "AMAZON.StopIntent"
    },
    {
      "intent": "KeyboardShortcutIntent",
      "slots": [
        {
          "name": "OperationName",
          "type": "LITERAL"
        }
      ]
    },
    {
      "intent": "SetPreferencesIntent",
      "slots": []
    },
    {
      "intent": "CaptureLayoutPreferenceIntent",
      "slots": [
        {
          "name": "LayoutPreference",
          "type": "LIST_OF_LAYOUTS"
        }
      ]
    },
    {
      "intent": "CaptureJawsVersionIntent",
      "slots": [
        {
          "name": "JawsVersion",
          "type": "NUMBER"
        }
      ]
    }
  ]
}

/**
 * Custom Slot Values
 * LIST_OF_LAYOUTS
 * desktop
 * laptop
*/